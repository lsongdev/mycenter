doctype html
html(lang='en')
  head
    title MyCenter
    meta(http-equiv="content-type", content="text/html; charset=utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1,user-scalable=no")
    link(rel="stylesheet", href="/light.css/dist/light-util.css")
    link(rel="stylesheet", href="/light.css/dist/light-nav.css")
    link(rel="stylesheet", href="/light.css/dist/light-grid.css")
    link(rel="stylesheet", href="/light.css/dist/light-form.css")
    link(rel="stylesheet", href="/light.css/dist/light-button.css")
    link(rel="stylesheet", href="/light.css/dist/light-table.css")
    link(rel="stylesheet", href="/light.css/dist/light-list.css")
    link(rel="stylesheet", href="/light.css/dist/light-panel.css")
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/app.js')
  body.container.text-center
    header.header
      block header
        h1.title
          a(href='/') MyCenter
        nav.nav
          a(href='/') home
            if $user
              a(href="/#{$user.username}")=$user.username
              a(href="/settings") settings
              a(href="/logout", method="delete") logout
            else
              a(href='/login') login
              a(href='/join') join
    .content
      block content
